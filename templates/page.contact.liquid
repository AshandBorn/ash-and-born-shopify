{% comment %}
  Template: Contact page for Ash & Born
  Provides contact information and a simple contact form.
{% endcomment %}

<!-- Contact Hero -->
<section class="contact-hero">
    <h1>Get in Touch</h1>
</section>

<!-- Contact Section -->
<section class="contact-section">
    <div class="contact-info">
        <h3>We'd love to hear from you</h3>
        <p>Whether you have a question about our products, need assistance with your order, or just want to share your hydration journey, we're here for you.</p>
        <p><i class="fas fa-envelope"></i> info@ashborn.com</p>
        <p><i class="fas fa-phone"></i> +1 (555) 123-4567</p>
        <p><i class="fas fa-map-marker-alt"></i> 123 Wellness St, Health City, HC 12345</p>
        <p><i class="fas fa-clock"></i> Mon-Fri: 9AM-6PM PST</p>
    </div>
    <div class="contact-form">
        <form onsubmit="event.preventDefault(); showNotification('Thank you for reaching out!'); this.reset();">
            <input type="text" placeholder="Your Name" required>
            <input type="email" placeholder="Your Email" required>
            <textarea rows="5" placeholder="Your Message" required></textarea>
            <button type="submit">Send Message</button>
        </form>
    </div>
</section>