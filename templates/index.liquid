<!-- Hero Section -->
<section class="hero" style="background-image: url('{{ 'hero-product.png' | asset_url }}'); background-size: cover; background-position: center;">
    <!-- Semi‑transparent overlay to improve text contrast over the hero image -->
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <h1>NEXT LEVEL<br>HYDRATION</h1>
        <a href="/collections/all" class="shop-now-btn">SHOP NOW</a>
    </div>
</section>

<!-- Best Sellers Section -->
<section class="best-sellers" id="shop">
    <div class="section-header">
        <h2 class="section-title">BEST SELLERS</h2>
        <a href="/collections/all" class="shop-all-link">SHOP ALL</a>
    </div>
    <div class="products-grid">
        <!-- Product 1 -->
        <div class="product-card fade-in">
            <div class="sold-out-badge">SOLD OUT</div>
            {% render 'image-fallback', image: null, alt: 'Blue Raspberry', ratio: '1/1', placeholder: 'product-2' %}
            <div class="product-info">
                <h3 class="product-name">BLUE RASPBERRY</h3>
                <div class="product-price">58.00 NIS <span class="original-price">69.00 NIS</span></div>
                <button class="add-to-cart-btn sold-out-btn">Sold Out</button>
            </div>
        </div>
        <!-- Product 2 -->
        <div class="product-card fade-in">
            {% render 'image-fallback', image: null, alt: 'Berry Blast', ratio: '1/1', placeholder: 'product-3' %}
            <div class="product-info">
                <h3 class="product-name">BERRY BLAST</h3>
                <div class="product-price">85.00 NIS <span class="original-price">103.00 NIS</span></div>
                <button class="add-to-cart-btn" onclick="addToCart('BERRY BLAST', 85.00)">ADD TO CART</button>
            </div>
        </div>
        <!-- Product 3 -->
        <div class="product-card fade-in">
            {% render 'image-fallback', image: null, alt: 'Tropical Sunrise', ratio: '1/1', placeholder: 'product-1' %}
            <div class="product-info">
                <h3 class="product-name">TROPICAL SUNRISE</h3>
                <div class="product-price">172.00 NIS <span class="original-price">185.00 NIS</span></div>
                <button class="add-to-cart-btn" onclick="addToCart('TROPICAL SUNRISE', 172.00)">ADD TO CART</button>
            </div>
        </div>
        <!-- Product 4 -->
        <div class="product-card fade-in">
            {% render 'image-fallback', image: null, alt: 'Lemon Lime', ratio: '1/1', placeholder: 'product-4' %}
            <div class="product-info">
                <h3 class="product-name"><a href="/pages/lemon-lime">LEMON LIME</a></h3>
                <div class="product-price">35.00 NIS — 62.00 NIS</div>
                <button class="add-to-cart-btn" onclick="addToCart('LEMON LIME', 35.00)">ADD TO CART</button>
            </div>
        </div>
    </div>
</section>

<!-- New Arrivals Section -->
<section class="new-arrivals">
    <div class="new-arrivals-content">
        <div class="new-arrivals-text">
            <h3>NEW ARRIVALS</h3>
            <h2>WATERMELON</h2>
            <p>Add a burst of watermelon into your morning, afternoon, and evening drinks and let the juicy flavour invigorate your day.</p>
            <a href="/collections/all" class="shop-now-btn">SHOP NOW</a>
        </div>
        <div class="new-arrivals-image" style="background-image: url('{{ 'watermelon-pattern.png' | asset_url }}'); background-size: cover; background-position: center; border-radius: 20px;">
            <div class="watermelon-visual">
                <div class="watermelon-slice"></div>
                <div class="watermelon-slice"></div>
                <div class="watermelon-slice"></div>
                <div class="product-packet">ASH &<br>BORN</div>
                <div class="bubbles"></div>
            </div>
        </div>
    </div>
</section>

<!-- Video Section -->
<section class="video-section">
    <h2>Discover the Science of Hydration</h2>
    <div class="video-container">
        <!-- Embed a science-based hydration video -->
        <iframe src="https://www.youtube.com/embed/lh2vc6lc1Do" title="Science of Hydration" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
</section>

<!-- How To Section -->
<section class="how-to-section">
    <div class="how-to-banner">ASH & BORN! HOW TO ASH & BORN! HOW TO ASH & BORN! HOW TO ASH & BORN!</div>
    <div class="steps-container">
        <div class="step fade-in">
            <div class="step-image">
                <div class="packet"></div>
            </div>
            <div class="step-number">STEP 1:</div>
            <div class="step-description">Pick your favourite ASH & BORN flavour</div>
        </div>
        <div class="step fade-in">
            <div class="step-image">
                <div class="glass">
                    <div class="liquid"></div>
                </div>
                <div class="packet" style="position: absolute; top: 20px; right: 20px; transform: rotate(45deg) scale(0.6);"></div>
            </div>
            <div class="step-number">STEP 2:</div>
            <div class="step-description">Empty 1 sachet into 200ml of water</div>
        </div>
        <div class="step fade-in">
            <div class="step-image">
                <div class="pour-effect">
                    <div class="stream"></div>
                    <div class="splash"></div>
                </div>
            </div>
            <div class="step-number">STEP 3:</div>
            <div class="step-description">ASH & BORN your hydration</div>
        </div>
    </div>
</section>