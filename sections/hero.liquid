{% comment %}
  Ash & Born Hero Section
  Large banner with background image and CTAs.
{% endcomment %}
<section class="hero-section">
  <img class="hero-bg" src="{{ 'hero.png' | asset_url }}" alt="Hero background" />
  <div class="hero-cta">
    <div class="hero-buttons">
      <button class="hero-btn sleep" onclick="location.href='{{ section.settings.sleep_url }}'">
        <span>{{ section.settings.sleep_label }}</span>
      </button>
      <button class="hero-btn hydration" onclick="location.href='{{ section.settings.hydration_url }}'">
        <span>{{ section.settings.hydration_label }}</span>
      </button>
    </div>
    <button class="hero-subscribe-btn" onclick="location.href='{{ section.settings.subscribe_url }}'">
      Subscribe
    </button>
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "sleep_label",
      "label": "Sleep button label",
      "default": "Shop Sleep"
    },
    {
      "type": "url",
      "id": "sleep_url",
      "label": "Sleep button URL",
      "default": "/collections/sleep"
    },
    {
      "type": "text",
      "id": "hydration_label",
      "label": "Hydration button label",
      "default": "Shop Hydration"
    },
    {
      "type": "url",
      "id": "hydration_url",
      "label": "Hydration button URL",
      "default": "/collections/hydration"
    },
    {
      "type": "url",
      "id": "subscribe_url",
      "label": "Subscribe button URL",
      "default": "/pages/subscribe"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
