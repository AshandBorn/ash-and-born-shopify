{% comment %}
  Product Bundles section
  Displays multiple product cards with images and descriptions.
{% endcomment %}
<section class="product-bundles">
  {% for block in section.blocks %}
  <div class="product-card">
    {% if block.settings.image != blank %}
      <img src="{{ block.settings.image | img_url: 'large' }}" alt="{{ block.settings.title }}" />
    {% endif %}
    <h3>{{ block.settings.title }}</h3>
    <p>{{ block.settings.description }}</p>
    <a href="{{ block.settings.button_url }}">{{ block.settings.button_label }}</a>
  </div>
  {% endfor %}
</section>

{% schema %}
{
  "name": "Product bundles",
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Product image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Sleep Formula"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Boost your rest with adaptogens and clean electrolytes."
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Shop now"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL",
          "default": "/"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Product bundles",
      "blocks": [
        {
          "type": "product",
          "settings": {
            "title": "Sleep Formula",
            "description": "Boost your rest with adaptogens and clean electrolytes.",
            "button_label": "Shop Sleep",
            "button_url": "/collections/sleep"
          }
        },
        {
          "type": "product",
          "settings": {
            "title": "Hydration Boost",
            "description": "Hydrate your day with electrolytes and adaptogens.",
            "button_label": "Shop Hydration",
            "button_url": "/collections/hydration"
          }
        }
      ]
    }
  ]
}
{% endschema %}
