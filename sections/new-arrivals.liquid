<section class="new-arrivals">
  <div class="new-arrivals-content">
    <div class="new-arrivals-text">
      {% if section.settings.kicker != blank %}<h3>{{ section.settings.kicker }}</h3>{% endif %}
      {% if section.settings.heading != blank %}<h2>{{ section.settings.heading }}</h2>{% endif %}
      {% if section.settings.body != blank %}<p>{{ section.settings.body }}</p>{% endif %}
      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_url }}" class="shop-now-btn">{{ section.settings.button_label }}</a>
      {% endif %}
    </div>
    <div class="new-arrivals-image" style="background-image: url('{% if section.settings.background_image != blank %}{{ section.settings.background_image | image_url: width: 1000 }}{% else %}{{ 'watermelon-pattern.png' | asset_url }}{% endif %}'); background-size: cover; background-position: center; border-radius: 20px;">
      <div class="watermelon-visual">
        {% comment %} decorative visual replicating the original design {% endcomment %}
        <div class="watermelon-slice"></div>
        <div class="watermelon-slice"></div>
        <div class="watermelon-slice"></div>
        <div class="product-packet">ASH &<br>BORN</div>
        <div class="bubbles"></div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "New arrivals",
  "tag": "section",
  "class": "section new-arrivals-section",
  "settings": [
    {
      "type": "text",
      "id": "kicker",
      "label": "Kicker",
      "default": "New arrivals"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Watermelon"
    },
    {
      "type": "textarea",
      "id": "body",
      "label": "Body text",
      "default": "Add a burst of watermelon into your morning, afternoon, and evening drinks and let the juicy flavour invigorate your day."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL",
      "default": "/collections/all"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    }
  ],
  "presets": [
    {
      "name": "New arrivals"
    }
  ]
}
{% endschema %}