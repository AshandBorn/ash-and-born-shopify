<section class="section">
  <div class="container">
    <h2>{{ section.settings.heading }}</h2>
    <ul class="ingredients-list">
      {% for block in section.blocks %}
        <li {{ block.shopify_attributes }}>
          <strong>{{ block.settings.title }}</strong><br>
          <small style="color:var(--muted)">{{ block.settings.note }}</small>
        </li>
      {% endfor %}
    </ul>
  </div>
</section>
{% schema %}
{
  "name": "Ingredients / Benefits",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "What’s inside" }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        { "type": "text", "id": "title", "label": "Title", "default": "Electrolyte Complex" },
        { "type": "text", "id": "note", "label": "Note", "default": "Sodium · Potassium · Magnesium" }
      ]
    }
  ],
  "presets": [{ "name": "Ingredients" }]
}
{% endschema %}
