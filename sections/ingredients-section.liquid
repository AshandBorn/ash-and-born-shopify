<section class="ingredients-section section-animate" style="padding:64px 0;background:#0a0a0b;">
  <div class="container" style="max-width:800px;margin:0 auto;padding:0 24px;">
    <h2 style="text-align:center;font-size:2rem;font-weight:600;margin-bottom:32px;">{{ section.settings.heading }}</h2>
    <div class="ingredients-grid" style="display:grid;grid-template-columns:repeat(auto-fit,minmax(240px,1fr));gap:24px;">
      {% for block in section.blocks %}
        <div style="text-align:center;padding:24px;border:1px solid rgba(255,255,255,0.15);border-radius:12px;">
          <h3 style="font-size:1.25rem;font-weight:500;margin-bottom:8px;">{{ block.settings.title }}</h3>
          <p style="font-size:1rem;line-height:1.6;opacity:0.7;">{{ block.settings.content }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Ingredients section",
  "tag": "section",
  "class": "section-ingredients",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Inside the blend"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Clean electrolytes"
        },
        {
          "type": "text",
          "id": "content",
          "label": "Description",
          "default": "Formulated for balance and recovery with science-backed ingredients."
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Ingredients section",
      "blocks": [
        {
          "type": "feature"
        },
        {
          "type": "feature"
        },
        {
          "type": "feature"
        }
      ]
    }
  ]
}
{% endschema %}