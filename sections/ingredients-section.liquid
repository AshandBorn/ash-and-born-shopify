
<section class="ingredients">
  <div class="container">
    <h2 style="margin:0 0 12px">{{ section.settings.title }}</h2>
    <div style="display:grid;gap:12px;grid-template-columns: repeat(auto-fit, minmax(220px,1fr))">
      {% for block in section.blocks %}
        <article style="border:1px solid rgba(255,255,255,.15);border-radius:12px;padding:12px">
          <h3 style="margin:0 0 6px">{{ block.settings.name }}</h3>
          <p style="opacity:.8;margin:0">{{ block.settings.desc }}</p>
        </article>
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Ingredients",
  "settings": [{ "type": "text", "id": "title", "label": "Title", "default": "Inside the blend" }],
  "blocks": [
    { "type": "ing", "name": "Ingredient", "settings": [
      { "type": "text", "id": "name", "label": "Name", "default": "Magnesium" },
      { "type": "text", "id": "desc", "label": "Description", "default": "Supports muscle function & calm." }
    ]}
  ],
  "presets": [{ "name": "Ingredients", "blocks": [{ "type": "ing" }, { "type": "ing", "settings": {"name": "Potassium", "desc": "Electrolyte balance."}}]}]
}
{% endschema %}
