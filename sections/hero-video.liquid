
<section class="hero-video section-animate" style="position:relative;height:80vh;overflow:hidden;">
  {% if section.settings.video != blank %}
    <video class="hero-bg" src="{{ section.settings.video | asset_url }}" autoplay loop muted playsinline style="width:100%;height:100%;object-fit:cover;object-position:center;"></video>
  {% endif %}
  <div class="hero-overlay">
    <div class="container">
      <h1 style="font-size:clamp(28px,5vw,56px);margin:0 0 12px">{{ section.settings.heading }}</h1>
      <p style="opacity:.85;margin:0 0 18px">{{ section.settings.subheading }}</p>
      <div style="display:flex;gap:12px;justify-content:center;flex-wrap:wrap">
        <a class="btn" href="{{ section.settings.primary_url }}">{{ section.settings.primary_label }}</a>
        <a class="btn btn--ghost" href="{{ section.settings.secondary_url }}">{{ section.settings.secondary_label }}</a>
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Video hero",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Daily clarity. Nightly recovery." },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "Two blends tuned for performance and calm. Electrolytes + adaptogens, clean and effective." },
    { "type": "text", "id": "primary_label", "label": "Primary button label", "default": "Hydration" },
    { "type": "url",  "id": "primary_url",   "label": "Primary button URL", "default": "/" },
    { "type": "text", "id": "secondary_label", "label": "Secondary button label", "default": "Sleep" },
    { "type": "url",  "id": "secondary_url",   "label": "Secondary button URL", "default": "/" },
    { "type": "text", "id": "video", "label": "Video filename in Assets (e.g., hero.mp4)", "default": "" }
  ],
  "presets": [{ "name": "Video hero" }]
}
{% endschema %}
