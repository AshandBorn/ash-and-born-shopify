<section class="section hero">
  {% if section.settings.video_url != blank %}
    <video autoplay muted loop playsinline poster="{{ 'hero_poster.jpg' | asset_url }}">
      <source src="{{ section.settings.video_url }}" type="video/mp4">
    </video>
  {% else %}
    <img src="{{ 'hero_poster.jpg' | asset_url }}" alt="Ash & Born">
  {% endif %}
  {% if section.settings.badge != blank %}
    <div class="badge" style="position:absolute;top:16px;left:16px">{{ section.settings.badge }}</div>
  {% endif %}
</section>
{% schema %}
{
  "name": "Hero (video or image)",
  "settings": [
    { "type": "url", "id": "video_url", "label": "MP4 video URL" },
    { "type": "text", "id": "badge", "label": "Badge text", "default": "Fight Your Demons" }
  ],
  "presets": [{ "name": "Hero â€” Video" }]
}
{% endschema %}
