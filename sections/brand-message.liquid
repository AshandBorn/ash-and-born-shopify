<section class="section">
  <div class="container">
    <span class="badge">{{ section.settings.kicker }}</span>
    <h2>{{ section.settings.heading }}</h2>
    <p style="max-width:720px;color:var(--muted)">{{ section.settings.body }}</p>
  </div>
</section>
{% schema %}
{
  "name": "Brand message",
  "settings": [
    { "type": "text", "id": "kicker", "label": "Kicker", "default": "Ash & Born" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Electrolytes for real life" },
    { "type": "textarea", "id": "body", "label": "Body", "default": "Designed to help you handle everyday challenges without the crash." }
  ],
  "presets": [{ "name": "Brand message" }]
}
{% endschema %}
