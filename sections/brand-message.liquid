
<section class="brand-message">
  <div class="container" style="padding:16px;border:1px solid rgba(255,255,255,.15);border-radius:16px">
    <h2 style="margin:0 0 8px">{{ section.settings.heading }}</h2>
    <p style="opacity:.8;margin:0">{{ section.settings.text }}</p>
  </div>
</section>
{% schema %}
{
  "name": "Brand message",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "No gimmicks. Just balance."},
    { "type": "text", "id": "text", "label": "Text", "default": "We built Ash & Born to be your daily ritual: clean electrolytes, thoughtful flavors, honest labels."}
  ],
  "presets": [{ "name": "Brand message" }]
}
{% endschema %}
