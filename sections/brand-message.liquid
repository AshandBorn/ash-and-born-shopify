<section class="brand-message-section" style="padding:64px 0;">
  <div class="container" style="max-width:800px;margin:0 auto;text-align:center;padding:0 24px;">
    <h2 style="font-size:2rem;margin-bottom:16px;font-weight:600">{{ section.settings.heading }}</h2>
    <p style="font-size:1.125rem;margin-bottom:24px;opacity:0.8">{{ section.settings.subheading }}</p>
    <p style="font-size:1rem;line-height:1.6;opacity:0.7">{{ section.settings.body }}</p>
  </div>
</section>

{% schema %}
{
  "name": "Brand message",
  "tag": "section",
  "class": "section-brand-message",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Daily clarity. Nightly recovery."
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Two blends tuned for performance and calm. Electrolytes + adaptogens, clean and effective."
    },
    {
      "type": "textarea",
      "id": "body",
      "label": "Body text",
      "default": "We built Ash & Born to be your daily ritual: clean electrolytes, thoughtful flavors, honest labels."
    }
  ],
  "presets": [
    {
      "name": "Brand message"
    }
  ]
}
{% endschema %}