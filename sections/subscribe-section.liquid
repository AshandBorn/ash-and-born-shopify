{% comment %}
  Subscribe Section
  Displays a newsletter sign-up form.
{% endcomment %}
<section class="subscribe-section">
  <h3>{{ section.settings.heading }}</h3>
  <p>{{ section.settings.subheading }}</p>
  <form action="/contact#contact_form" method="post" accept-charset="UTF-8" class="customer-form">
    <input type="hidden" name="form_type" value="customer" />
    <input type="hidden" name="utf8" value="âœ“" />
    <input type="email" name="contact[email]" placeholder="Enter your email" required />
    <button type="submit">{{ section.settings.button_label }}</button>
  </form>
</section>

{% schema %}
{
  "name": "Subscribe section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Stay in the loop"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Sign up to receive news and special offers."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Subscribe"
    }
  ],
  "presets": [
    {"name": "Subscribe section"}
  ]
}
{% endschema %}
