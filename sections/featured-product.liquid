
<section class="featured-product section-animate" style="padding:64px 0;">
  <div class="container">
    <h2 style="margin:0 0 12px">{{ section.settings.title }}</h2>
    {% assign handle = section.settings.product %}
    {% if handle and all_products[handle] %}
      {% assign pd = all_products[handle] %}
      {% assign first_av = pd.selected_or_first_available_variant %}
      <article class="card" style="display:grid;grid-template-columns:1fr 1fr;gap:20px;align-items:center">
        <div>
          {% if pd.featured_image %}
            <img src="{{ pd.featured_image | img_url: '1000x' }}" alt="{{ pd.title }}">
          {% endif %}
        </div>
        <div class="card-body">
          <h3 style="margin:0 0 8px;font-size:26px">{{ pd.title }}</h3>
          <div class="price" style="margin:8px 0 16px">{{ first_av.price | money }}</div>
          <p style="opacity:.85;margin:0 0 16px">{{ pd.description | strip_html | truncate: 200 }}</p>
          {% if first_av.available %}
            <button class="btn" data-add-to-cart data-variant-id="{{ first_av.id }}">Add to cart</button>
          {% else %}
            <span>Sold out</span>
          {% endif %}
        </div>
      </article>
    {% else %}
      <div class="card" style="padding:16px">
        <p>No product selected. Choose a product in the section settings.</p>
      </div>
    {% endif %}
  </div>
</section>
{% schema %}
{
  "name": "Featured product",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "Featured product" },
    { "type": "product", "id": "product", "label": "Product" }
  ],
  "presets": [{ "name": "Featured product" }]
}
{% endschema %}
