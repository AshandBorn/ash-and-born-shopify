{% schema %}
{
  "name": "Footer",
  "blocks": [
    { "type": "link", "name": "Link", "settings": [
      { "type": "text", "id": "label", "label": "Label", "default": "Privacy" },
      { "type": "url",  "id": "url",   "label": "URL", "default": "/" }
    ]}
  ],
  "presets": [{ "name": "Footer", "blocks": [{ "type": "link" }, { "type": "link", "settings": { "label": "FAQ", "url": "/pages/faq" } }]}]
}
{% endschema %}
