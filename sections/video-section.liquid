<section class="video-section">
  {% if section.settings.heading != blank %}<h2>{{ section.settings.heading }}</h2>{% endif %}
  <div class="video-container">
    <iframe
      src="https://www.youtube.com/embed/{{ section.settings.video_id }}"
      title="{{ section.settings.heading }}"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
      allowfullscreen
    ></iframe>
  </div>
</section>

{% schema %}
{
  "name": "Video section",
  "tag": "section",
  "class": "section video-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Discover the science of hydration"
    },
    {
      "type": "text",
      "id": "video_id",
      "label": "YouTube video ID",
      "default": "lh2vc6lc1Do"
    }
  ],
  "presets": [
    {
      "name": "Video section"
    }
  ]
}
{% endschema %}