        </div>
    </div>
    <!-- Header -->
    <header class="header">
        <nav class="nav-container">
            <div class="nav-left">
                <ul class="nav-menu">
                    {% comment %} Try to use Shopify menu system first {% endcomment %}
                    {% if linklists['main-menu'].links.size > 0 %}
                        {% for link in linklists['main-menu'].links limit: 5 %}
                            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                        {% endfor %}
                    {% else %}
                        {% comment %} Fallback navigation matching live site {% endcomment %}
                        <li><a href="/">Home</a></li>
                        <li><a href="{{ routes.collections_url }}/all">Catalog</a></li>
                        {% if pages['contact'] %}<li><a href="{{ pages['contact'].url }}">Contact</a></li>{% endif %}
                    {% endif %}
                </ul>
            </div>
            <a href="/" class="logo">ASH & BORN</a>
            <div class="nav-actions">
                <div class="search-icon"><i class="fas fa-search"></i></div>
                <a href="{{ routes.account_url }}" class="user-icon"><i class="fas fa-user"></i></a>
                <a href="{{ routes.cart_url }}" class="cart-icon">
                    <i class="fas fa-shopping-bag"></i>
                    <span class="cart-count">{{ cart.item_count }}</span>
                </a>
                <div class="mobile-menu-toggle">
                    <i class="fas fa-bars"></i>
                </div>
            </div>
        </nav>
    </header>
    
    {{ content_for_layout }}

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>Ash & Born</h3>
